{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "Kiderat",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			},
			"http": {
				"all": true,
				"request": true,
				"scope": ["https://auth.kide.app/*", "https://api.kide.app/*"]
			}
		},
		"bundle": {
			"active": true,
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.kassq.dev",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": [
				"https://kiderat-nextjs.vercel.app/api/update?target={{target}}&arch={{arch}}&current_version={{current_version}}"
			],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDQkFBRjMzQzMzNUQwMQpSV1FCWFRNODg2ckxCVDl5aXZsZlpYNitLaDg5RW13Q0tya0RZdmdiRnFDM0MyZHVmR2h3ZGNRZQo="
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"decorations": false,
				"title": "kiderat",
				"width": 1000,
				"height": 600,
				"minHeight": 600,
				"minWidth": 1000,
				"visible": false,
				"center": true
			},
			{
				"width": 300,
				"height": 250,
				"decorations": false,
				"url": "splashscreen.html",
				"label": "splashscreen",
				"resizable": false,
				"center": true
			}
		]
	}
}
